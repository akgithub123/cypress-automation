pipeline {
    agent any

    tools {
        nodejs 'NodeJS_23'   // configured in Jenkins Global Tool Configuration
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/akgithub123/cypress-automation.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Cypress Tests') {
            steps {
                sh 'npx cypress run'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'cypress/videos/**/*.mp4', allowEmptyArchive: true
            archiveArtifacts artifacts: 'cypress/screenshots/**/*.png', allowEmptyArchive: true
        }

        failure {
            echo '❌ Cypress tests failed'
        }

        success {
            echo '✅ Cypress tests passed'
        }
    }
}
